<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Possum Music for Possum People</title>
    <link rel="stylesheet" href="/styles.css" />
</head>
<body>
<section id="showInfo">
    <h2>Show Info...Please</h2>
    <form action="/api" method="POST">
        <input type="date" placeholder="date" name="date" id="date">
        <input type="text" placeholder="bands playing" name="bands"></input>
        <input type="text" placeholder="venue" name="venue">
        <input type="text" placeholder="ticket price" name="ticketPrice">
        <input type="text" placeholder="start time" name="startTime">
        <input type="text" placeholder="ticket link" name="ticketLink">
        <section id="buttons">
        <button type="submit">Fill in fields above<br>and click here to submit</button>
        </section>
    </form>
</section>
<section id="deleteStuff">

    <h2 id="upcoming">Upcoming Shows</h2>
    <ol class="shows">
    <% for(let i=0; i < info.length; i++) {%>
        <li class="show">
            <span class="bold"><%= info[i].date %></span>
            <span>  </span>
            <span><%= info[i].bands %></span>
            <span> - </span>
            <span><%= info[i].venue %></span>
            <span> - </span>
            <span><%= info[i].ticketPrice %></span>
            <span> - </span>
            <span><%= info[i].startTime %></span>
            <span> - </span>
            <span><a href="<%= info[i].ticketLink %>">â™£</a></span>
        </li>
    <% } %>
    </ol>

    </form>
</section>
<script type="text/javascript" src='main.js'></script>
</body>
</html>